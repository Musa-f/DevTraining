{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_crud_index') }}">back to list</a>

    <a href="{{ path('app_post_crud_edit', {'id': post.id}) }}">edit</a>

    {{ include('post_crud/_delete_form.html.twig') }} 
{% endblock %}
